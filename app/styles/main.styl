
body 
	background #eee
.todo 
	background #fff
	font-family Arial, Verdana, Tahoma
	color #7F898F
	width 400px 
	margin 50px auto
	border 1px solid #ddd 
	padding 20px 
	border-radius 3px
	box-shadow 3px 3px 3px rgba(0,0,0,0.05)
	position relative

	* 
		box-sizing border-box


	h3 
		text-align center


	input
		
		height 30px
		width 300px
		float left
		margin 0px 
		padding 5px
		border 1px solid #ccc
		outline none
		border-radius 3px
		transition all 0.1s linear

		&:hover 
			border 1px solid #aaa

	button 
		height 30px
		width 90px
		float right
		line-height 30px
		margin 0 0 0 10px 
		padding 0 10px
		background #aaa 
		color #fff
		border none
		cursor pointer
		outline none
		border-radius 3px
		transition all 0.2s linear

		&:hover 
			background #555
	.message 
		display none
		padding 0 10px
		font-size 12px
		width 120px
		height 30px
		line-height 30px
		text-align right
		position absolute
		margin-left -110px
		background #FC818F
		color #fff
		border-radius 3px
		animation anim 1s infinite
		-webkit-animation anim 1s infinite
		left 0px
		&:after 
			left 100%
			top 50%
			border solid transparent
			content " "
			height 0
			width 0
			position absolute
			pointer-events none
			border-color rgba(204, 204, 204, 0)
			border-left-color #FC818F
			border-width 8px
			margin-top -8px

	.clr 
		clear both

	ul 
		
		list-style none 
		margin 10px 0 0 0 
		padding 0px
		border-top 1px solid #ddd 
		li 
			padding 5px
			border-bottom 1px solid #ddd 


@-webkit-keyframes anim {
	0%   { left: 0; opacity:0}
	20% { left: 5px; opacity:1 }
	80% { left: 5px; opacity:1 }
	100%   { left: 0; opacity:0}
}
@-moz-keyframes anim {
	0%   { left: 0; }
	70% { left: 5px; }
	100% { left: 0; }
}
@-o-keyframes anim {
	0%   { left: 0; }
	70% { left: 5px; }
	100% { left: 0; }
}
@keyframes anim {
	0%   { left: 0; opacity:0}
	20% { left: 5px; opacity:1 }
	80% { left: 5px; opacity:1 }
	100%   { left: 0; opacity:0}
}


